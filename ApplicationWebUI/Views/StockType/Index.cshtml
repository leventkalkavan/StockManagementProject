@model BusinessLayer.DTOs.PagedResult<BusinessLayer.DTOs.StockTypeDtos.StockTypeDto>

@{
    ViewData["Title"] = "Stok Türü Listesi";
    var items = Model?.Items ?? new List<BusinessLayer.DTOs.StockTypeDtos.StockTypeDto>();
    var currentPage = Model?.Page ?? 1;
    var pageSize = Model?.PageSize ?? 10;
    var totalPages = Model?.TotalPages ?? 0;
    var searchTerm = Model?.SearchTerm ?? "";
    int[] pageSizeOptions = { 5, 10, 20, 50 };
    var startPage = Math.Max(1, currentPage - 2);
    var endPage = Math.Min(totalPages, currentPage + 2);
    if (endPage - startPage < 4)
    {
        if (startPage == 1)
        {
            endPage = Math.Min(totalPages, startPage + 4);
        }
        else if (endPage == totalPages)
        {
            startPage = Math.Max(1, endPage - 4);
        }
    }
}

<h2>Stok Türü Listesi</h2>

<div class="d-flex flex-wrap gap-2 align-items-end justify-content-between mb-3">
    <form method="get" class="row g-2 align-items-end">
        <input type="hidden" name="page" value="1" />
        <div class="col-auto">
            <label class="form-label">Arama</label>
            <input type="text"
                   name="search"
                   value="@searchTerm"
                   class="form-control"
                   placeholder="Ara" />
        </div>
        <div class="col-auto">
            <label class="form-label">Sayfa Boyutu</label>
            <select name="pageSize" class="form-select">
                @foreach (var size in pageSizeOptions)
                {
                    <option value="@size" selected="@(size == pageSize ? "selected" : null)">@size</option>
                }
            </select>
        </div>
        <div class="col-auto d-flex gap-2">
            <button type="submit" class="btn btn-primary">Ara</button>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Temizle</a>
        </div>
    </form>

    <button class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#createStockTypeModal">
        + Stok Türü Ekle
    </button>
</div>

@if (items.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Stok Türü</th>
                <th>Durum</th>
                <th style="width: 30%">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@(item.IsActive ? "Aktif" : "Pasif")</td>
                    <td>
                        <button type="button"
                                class="btn btn-sm btn-warning"
                                data-bs-toggle="modal"
                                data-bs-target="#editStockTypeModal"
                                data-id="@item.Id"
                                data-name="@item.Name">
                            Düzenle
                        </button>

                        <form asp-action="Deactivate"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-danger"
                                    onclick="return confirm('Silmek istediğinizden emin misiniz?');">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">Kayıt bulunamadı.</div>
}

@if (totalPages > 1)
{
    <nav aria-label="Stok turu sayfalama">
        <ul class="pagination">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, pageSize = pageSize, search = searchTerm })">&#8249;</a>
            </li>
            @for (var i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = pageSize, search = searchTerm })">@i</a>
                </li>
            }
            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, pageSize = pageSize, search = searchTerm })">&#8250;</a>
            </li>
        </ul>
    </nav>
}

    <!-- yeni stok turu ekleme modalı-->
<div class="modal fade" id="createStockTypeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                        <h5 class="modal-title">Stok Türü Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                            <label class="form-label">Stok Türü</label>
                        <input name="Name"
                               class="form-control"
                                   placeholder="e.g. Kağıt"
                               required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        Ekle
                    </button>
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                            İptal
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

    <!--düzenleme modalı-->
<div class="modal fade" id="editStockTypeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form asp-action="Edit" method="post" id="editStockTypeForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="editStockTypeId" />

                <div class="modal-header">
                        <h5 class="modal-title">Stok Türü Düzenle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                            <label class="form-label">Stok Türü</label>
                        <input type="text" name="Name" id="editStockTypeName" class="form-control" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                            Güncelle
                    </button>
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                            İptal
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        const editModal = document.getElementById('editStockTypeModal');
        editModal.addEventListener('show.bs.modal', function (event) {
          const btn = event.relatedTarget;
          document.getElementById('editStockTypeId').value = btn.getAttribute('data-id');
          document.getElementById('editStockTypeName').value = btn.getAttribute('data-name');
        });
    </script>
}
