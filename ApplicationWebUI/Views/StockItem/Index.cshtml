@model List<BusinessLayer.DTOs.StockItemDto>

@{
    ViewData["Title"] = "Stok Listesi";
    string StockClassText(string? v) => v == "RawMaterial" ? "Hammadde" : ((v ?? "-"));
}

<h2>Stok Listesi</h2>

<div class="mb-3">
    <button type="button"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#createStockItemModal">
        + Stok Ekle
    </button>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 10%">Birim Kodu</th>
                <th style="width: 22%">Birim Açıklaması</th>
                <th style="width: 12%">Stok Türü</th>
                <th style="width: 12%">Toplam Stok Miktarı</th>
                <th style="width: 12%">Kritik Miktar</th>
                <th style="width: 14%">İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                var isCritical = item.Quantity <= item.CriticalQuantity;

                <tr class="@(isCritical ? "table-warning" : "")">
                    <td>@item.StockUnitCode</td>
                    <td>@(string.IsNullOrWhiteSpace(item.StockUnitDescription) ? "-" : item.StockUnitDescription)</td>
                    <td>@item.StockTypeName</td>

                    <td class="fw-semibold">@item.QuantityText</td>

                    <td class="fw-semibold">
                        @item.CriticalQuantityText
                        @if (isCritical)
                        {
                            <span class="ms-2 text-danger fw-semibold">(Kritik)</span>
                        }
                    </td>

                    <td>
                        <button type="button"
                                class="btn btn-sm btn-warning"
                                data-bs-toggle="modal"
                                data-bs-target="#editStockItemModal"
                                data-id="@item.Id"
                                data-stockunitid="@item.StockUnitId"
                                data-stockclass="@item.StockClass"
                                data-quantity="@item.Quantity.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                data-critical="@item.CriticalQuantity.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                data-shelf="@item.Shelf"
                                data-cabinet="@item.Cabinet">
                            Düzenle
                        </button>

                        <form asp-action="Deactivate"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-danger"
                                    onclick="return confirm('Silmek istediğinizden emin misiniz?');">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">Kayıt bulunamadı.</div>
}

<!-- CREATE MODAL -->
<div class="modal fade" id="createStockItemModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title">Stok Ekle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label">Stok Birim Adı</label>
                            <select name="StockUnitId" class="form-select" asp-items="ViewBag.StockUnits" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Stok Sınıfı</label>
                            <select name="StockClass" class="form-select" asp-items="ViewBag.StockClasses" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Miktar</label>
                            <input name="Quantity" type="number" step="0.01" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Kritik Miktar</label>
                            <input name="CriticalQuantity" type="number" step="0.01" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Raf</label>
                            <input name="Shelf" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Dolap</label>
                            <input name="Cabinet" class="form-control" />
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>

            </form>

        </div>
    </div>
</div>

<!-- EDIT MODAL -->
<div class="modal fade" id="editStockItemModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="id" id="editId" />

                <div class="modal-header">
                    <h5 class="modal-title">Stok Düzenle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label">Stok Birim Adı</label>
                            <select name="StockUnitId" id="editStockUnitId" class="form-select" asp-items="ViewBag.StockUnits" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Stok Sınıfı</label>
                            <select name="StockClass" id="editStockClass" class="form-select" asp-items="ViewBag.StockClasses" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Miktar</label>
                            <input name="Quantity" id="editQuantity" type="number" step="0.01" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Kritik Miktar</label>
                            <input name="CriticalQuantity" id="editCriticalQuantity" type="number" step="0.01" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Raf</label>
                            <input name="Shelf" id="editShelf" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Dolap</label>
                            <input name="Cabinet" id="editCabinet" class="form-control" />
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        const editModal = document.getElementById('editStockItemModal');

        editModal.addEventListener('show.bs.modal', function (event) {
            const btn = event.relatedTarget;

            document.getElementById('editId').value = btn.getAttribute('data-id') || "";
            document.getElementById('editStockUnitId').value = btn.getAttribute('data-stockunitid') || "";
            document.getElementById('editStockClass').value = btn.getAttribute('data-stockclass') || "";

            document.getElementById('editQuantity').value = btn.getAttribute('data-quantity') || "0";
            document.getElementById('editCriticalQuantity').value = btn.getAttribute('data-critical') || "0";

            document.getElementById('editShelf').value = btn.getAttribute('data-shelf') || "";
            document.getElementById('editCabinet').value = btn.getAttribute('data-cabinet') || "";
        });
    </script>
}
