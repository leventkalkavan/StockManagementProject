@model BusinessLayer.DTOs.PagedResult<BusinessLayer.DTOs.StockUnitDtos.StockUnitDto>

@{
    ViewData["Title"] = "Stok Birim Listesi";
    var items = Model?.Items ?? new List<BusinessLayer.DTOs.StockUnitDtos.StockUnitDto>();
    var currentPage = Model?.Page ?? 1;
    var pageSize = Model?.PageSize ?? 10;
    var totalPages = Model?.TotalPages ?? 0;
    var searchTerm = Model?.SearchTerm ?? "";
    int[] pageSizeOptions = { 5, 10, 20, 50 };
    var startPage = Math.Max(1, currentPage - 2);
    var endPage = Math.Min(totalPages, currentPage + 2);
    if (endPage - startPage < 4)
    {
        if (startPage == 1)
        {
            endPage = Math.Min(totalPages, startPage + 4);
        }
        else if (endPage == totalPages)
        {
            startPage = Math.Max(1, endPage - 4);
        }
    }
}

<h2>Stok Birim Listesi</h2>

<div class="d-flex flex-wrap gap-2 align-items-end justify-content-between mb-3">
    <form method="get" class="row g-2 align-items-end">
        <input type="hidden" name="page" value="1" />
        <div class="col-auto">
            <label class="form-label">Arama</label>
            <input name="search"
                   value="@searchTerm"
                   class="form-control"
                   placeholder="Ara" />
        </div>
        <div class="col-auto">
            <label class="form-label">Sayfa Boyutu</label>
            <select name="pageSize" class="form-select">
                @foreach (var size in pageSizeOptions)
                {
                    <option value="@size" selected="@(size == pageSize ? "selected" : null)">@size</option>
                }
            </select>
        </div>
        <div class="col-auto d-flex gap-2">
            <button type="submit" class="btn btn-primary">Ara</button>
            <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Temizle</a>
        </div>
    </form>

    <button type="button" class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#createStockUnitModal">
        + Stok Birimi Ekle
    </button>
</div>

@if (items.Any())
{
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Birim Kodu</th>
            <th>Stok Türü</th>
            <th>Tür</th>
            <th>Açýklama</th>
            <th>Alýþ Fiyatý</th>
            <th>Alýþ Para Birimi</th>
            <th>Satýþ Fiyatý</th>
            <th>Satýþ Para Birimi</th>
            <th>Kaðýt Aðýrlýðý</th>
                <th>Durum</th>
            <th style="width: 18%">Ýþlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Code</td>
                    <td>@item.StockTypeName</td>
                    <td>@item.QuantityUnitText</td>
                    <td>@(string.IsNullOrWhiteSpace(item.Description) ? "-" : item.Description)</td>

                    <td class="fw-semibold">@item.BuyingPrice.ToString("N2")</td>
                    <td>@item.BuyingCurrencySymbol</td>

                    <td class="fw-semibold">@item.SellingPrice.ToString("N2")</td>
                    <td>@item.SellingCurrencySymbol</td>

                    <td>@(item.PaperWeight.HasValue? item.PaperWeight.ToString() : "-")</td>
                    <td>@(item.IsActive ? "Aktif" : "Pasif")</td>

                    <td>
                        <button type="button"
                                class="btn btn-sm btn-warning"
                                data-bs-toggle="modal"
                                data-bs-target="#editStockUnitModal"
                                data-id="@item.Id"
                                data-code="@item.Code"
                                data-stocktypeid="@item.StockTypeId"
                                data-quantityunit="@((int)item.QuantityUnit)"
                                data-buyingcurrency="@((int)item.BuyingCurrency)"
                                data-sellingcurrency="@((int)item.SellingCurrency)"
                                data-description="@item.Description"
                                data-buying="@item.BuyingPrice.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                data-selling="@item.SellingPrice.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                data-paperweight="@(item.PaperWeight?.ToString() ?? "")">
                            Düzenle
                        </button>

                        <form asp-action="Deactivate"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-danger"
                                    onclick="return confirm('Silmek istediðinizden emin misiniz?');">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">Kayýt bulunamadý.</div>
}

@if (totalPages > 1)
{
    <nav aria-label="Stok birim sayfalama">
        <ul class="pagination">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, pageSize = pageSize, search = searchTerm })">&#8249;</a>
            </li>
            @for (var i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = pageSize, search = searchTerm })">@i</a>
                </li>
            }
            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, pageSize = pageSize, search = searchTerm })">&#8250;</a>
            </li>
        </ul>
    </nav>
}

<!-- stok birim ekleme modali -->
