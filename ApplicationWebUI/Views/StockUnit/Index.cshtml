    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <form id="editStockUnitForm" asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="id" id="editId" />

                <div class="modal-header">
                    <h5 class="modal-title">Stok Birimi Düzenle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3">

                        <div class="col-md-4">
                            <label class="form-label">Birim Kodu</label>
                            <input name="Code" id="editCode" class="form-control" required />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Stok Türü</label>
                            <select name="StockTypeId" id="editStockTypeId" class="form-select" asp-items="ViewBag.StockTypes" required></select>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Miktar Birimi</label>
                            <select name="QuantityUnit" id="editQuantityUnit" class="form-select" asp-items="ViewBag.QuantityUnits" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Alýþ Fiyatý</label>
                            <input name="BuyingPrice" id="editBuyingPrice" type="text" inputmode="decimal" pattern="[0-9.,]*" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Alýþ Para Birimi</label>
                            <select name="BuyingCurrency" id="editBuyingCurrency" class="form-select" asp-items="ViewBag.BuyingCurrencies" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Satýþ Fiyatý</label>
                            <input name="SellingPrice" id="editSellingPrice" type="text" inputmode="decimal" pattern="[0-9.,]*" class="form-control" required />
