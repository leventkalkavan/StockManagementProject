                        <div class="col-md-4">
                            <label class="form-label">Miktar Birimi</label>
                            <select name="QuantityUnit" class="form-select" asp-items="ViewBag.QuantityUnits" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Alýþ Fiyatý</label>
                            <input name="BuyingPrice" type="text" inputmode="decimal" pattern="[0-9.,]*" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Alýþ Para Birimi</label>
                            <select name="BuyingCurrency" class="form-select" asp-items="ViewBag.BuyingCurrencies" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Satýþ Fiyatý</label>
                            <input name="SellingPrice" type="text" inputmode="decimal" pattern="[0-9.,]*" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Satýþ Para Birimi</label>
                            <select name="SellingCurrency" class="form-select" asp-items="ViewBag.SellingCurrencies" required></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Kaðýt Aðýrlýðý</label>
                            <input name="PaperWeight" type="number" class="form-control" />
                        </div>

                        <div class="col-6">
                            <label class="form-label">Açýklama</label>
                            <input name="Description" class="form-control" />
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ýptal</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>

            </form>

        </div>
    </div>
</div>

<!-- edit modali -->
